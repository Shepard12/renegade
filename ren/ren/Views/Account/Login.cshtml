@model ren.Models.ViewModels.LoginModel
@{
    Layout = "_AccountLayout";
}

<h2>Sign In</h2>
<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="form-group col-md-12">
        <div class="form-group col-sm-1">
            <label asp-for="Email">Email</label>
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email" style="color:darkred"></span>
        </div>
        <div class="form-group col-sm-1">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" />
            <span asp-validation-for="Password" style="color:darkred"></span>
        </div>
        <div class="form-group col-md-12">
            <input type="submit" value="Sign in" class="btn btn-success" />
            <a asp-action="Register" asp-controller="Account" class="btn btn-info" style="color: white; outline: 0; margin-left: 5px;">Register</a>
            <a asp-action="Forgot" asp-controller="Account" class="btn btn-danger" style="color: white; outline: 0; margin-left: 5px;">Forgot pass</a>
        </div>
    </div>
</form>

