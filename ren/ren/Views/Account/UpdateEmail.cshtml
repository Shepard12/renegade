@model ren.Models.ViewModels.EditEmailModel
@{
    Layout = "_AccountLayout";
}

<h2>Update email</h2>
<form asp-action="UpdateEmail" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="form-group col-md-12">
        <div class="form-group col-sm-1">
            <label asp-for="NewEmail">New Email</label>
            <input type="text" asp-for="NewEmail" />
            <span asp-validation-for="NewEmail" style="color:darkred"></span>
        </div>
        <div class="form-group col-sm-1">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" />
            <span asp-validation-for="Password" style="color:darkred"></span>
        </div>
        <div class="form-group col-md-12">
            <input type="submit" value="Update" class="btn btn-success" />
        </div>
    </div>
</form>

