@model ren.Models.ViewModels.RegisterModel
@{
    Layout = "_AccountLayout";
}

<h2>Register</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div>
            <label asp-for="Email">Email</label><br />
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email" style="color:darkred"></span>
        </div>
        <div>
            <label asp-for="Password">Password</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password" style="color:darkred"></span>
        </div>
        <div>
            <label asp-for="ConfirmPassword">Confirm password</label><br />
            <input asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" style="color:darkred"></span>
        </div>
        <div>
            <input type="submit" value="Register" class="btn btn-success" style="margin-top: 5px;"/>
        </div>
    </div>
</form>