@model ren.Models.ViewModels.EditPasswordModel
@{
    Layout = "_AccountLayout";
}

<h2>Update Password</h2>
<form asp-action="UpdatePass" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="form-group col-md-12">
        <div class="form-group col-sm-3">
            <label asp-for="OldPassword">Old Password</label>
            <input asp-for="OldPassword" />
            <span asp-validation-for="OldPassword" style="color:darkred"></span>
        </div>
        <div class="form-group col-sm-3">
            <label asp-for="NewPassword1">New Password</label>
            <input asp-for="NewPassword1" />
            <span asp-validation-for="NewPassword1" style="color:darkred"></span>
        </div>
        <div class="form-group col-sm-3">
            <label asp-for="NewPassword2">Confirm new</label>
            <input asp-for="NewPassword2" />
            <span asp-validation-for="NewPassword2" style="color:darkred"></span>
        </div>
        <div class="form-group col-md-12">
            <input type="submit" value="Update" class="btn btn-success" />
        </div>
    </div>
</form>


